<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fatherLayout"
    android:background="@drawable/meinv"
    tools:context="my.example.popseletemenu.MainActivity" >

	<LinearLayout
	    android:id="@+id/popLayout"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_marginTop="-40dp"
	    android:background="#80000000"
	    android:orientation="horizontal" >

	    <Button
	        android:id="@+id/button"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/back_1"
	        android:gravity="center"
	        />
	    <TextView 
	        android:id="@+id/pages"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="12/32"
	        android:textColor="#ffffff"
	        android:layout_weight="1"
	        />
	    <Button 
	        android:id="@+id/delete"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/delet"
	        />
	    <Button
	        android:id="@+id/turn"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/turn_1"
	        />
	    <Button
	        android:id="@+id/share"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/share"
	        />
	</LinearLayout>

	<Button
	    android:id="@+id/moveOut"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="35dp"
	    android:text="moveOut" />

	<Button
	    android:id="@+id/moveInt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="62dp"
	    android:text="moveUp"/>
    
</RelativeLayout>
